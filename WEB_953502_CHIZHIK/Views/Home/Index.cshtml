
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="block3">
    <h1 class="bold">@ViewData["Message"]</h1>
</div>
<div class="block4">
    <h2 class="bold">Список</h2>
</div>
<ol type="A">
    @for (var i = 1; i <= 2; i++)
    {
        <li>Элемент @i списка</li>
    }
</ol>
<hr>
<form method="post">
    <h2 class="bold">Форма</h2>

    <div class="block1">
        <select asp-items="@ViewData["Lst"] as SelectList" name="List"></select>
    </div>

    <div class="block1">
        <input class="form-check-input" type="checkbox" value="on" id="defaultCheck1" name="Check1">
        <label class="form-check-label" for="defaultCheck1">Чек-бокс 1</label>
    </div>

    <div class="block1">
        <input class="form-check-input" type="checkbox" value="on" id="defaultCheck1" name="Check2">
        <label class="form-check-label" for="defaultCheck1">Чек-бокс 2</label>
    </div>
    <br>
    <div class="block1">
        <input class="form-check-input" type="radio" name="Radio" id="inlineRadio1" value="option1">
        <label class="block2" for="inlineRadio1">Радио-1</label>

        <input class="form-check-input" type="radio" name="Radio" id="inlineRadio2" value="option2">
        <label class="block2" for="inlineRadio2">Радио-2</label>

        <input class="form-check-input" type="radio" name="Radio" id="inlineRadio3" value="option3">
        <label class="block2" for="inlineRadio3">Радио-3</label>
    </div>

    <div class="form-group row">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Логин</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="Login" id="inputEmail1" placeholder="Имя пользователя">
        </div>
    </div>

    <div class="form-group row">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Пароль</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" name="Password" id="inputPassword1" placeholder="Пароль">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Отправить</button>
        </div>
    </div>
</form>

