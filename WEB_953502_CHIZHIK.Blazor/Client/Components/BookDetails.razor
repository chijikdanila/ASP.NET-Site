@using WEB_953502_CHIZHIK.Blazor.Client.Models
@if (Book != null)
{
    <img src="@imageSrc" class="img-thumbnail" width="150" />
    <div>
        <p>@Book.Author "@Book.BookName"</p>
        <div class="badge badge-info ">
            @Book.Price BYN
    </div>
</div>
}
@code {
    [Parameter]
    public DetailsViewModel Book { get; set; }
    [Parameter]
    public EventCallback<DetailsViewModel> BookChanged { get; set; }
    string imageSrc
    {
        get
        {
            return $"{Book.Image}";
        }
    }
}

